{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.urlList'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.urlList'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'url.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.createdAt'|trans, 'url.createdAt') }}</th>
                <th>{{ 'label.originalUrl'|trans }}</th>
                <th>{{ 'label.shortCode'|trans }}</th>
                <th>{{ 'label.author'|trans }}</th>
                <th>{{ 'label.tags'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for url in pagination.items %}
                <tr>
                    <td>{{ url.id }}</td>
                    <td>{{ url.createdAt|format_date('long') }}</td>
                    <td><a href="{{ url.originalUrl }}">{{ url.originalUrl }}</a></td>
                    <td>{{ url.shortCode }}</td>
                    <td>{{ url.author.email }}</td>
                    <td>
                        {% for tag in url.tags %}
                        <a href="{{ url('tag_view', {id: tag.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ tag.title }}
                            </a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ url('url_view', {id: url.id}) }}" class="btn btn-sm btn-outline-primary" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        {% if is_granted('URL_EDIT', url) %}
                        <a href="{{ url('url_edit', {id: url.id}) }}" class="btn btn-sm btn-outline-secondary" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        {% endif %}
                        {% if is_granted('URL_DELETE', url) %}
                        <a href="{{ url('url_delete', {id: url.id}) }}" class="btn btn-sm btn-outline-danger" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            <a href="{{ url('url_create') }}" class="btn btn-primary" title="{{ 'action.addNewUrl'|trans }}">
                {{ 'action.addNewUrl'|trans }}
            </a>
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.emptyList'|trans }}
        </p>
    {% endif %}
{% endblock %}