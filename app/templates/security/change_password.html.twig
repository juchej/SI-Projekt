{% extends 'base.html.twig' %}

{% block title %}{{ 'title.changePassword'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'title.changePassword'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.plainPassword.first) }}
    {{ form_row(form.plainPassword.second) }}
    <button class="btn btn-primary">{{ 'action.save'|trans }}</button>
    {{ form_end(form) }}

{% endblock %}
