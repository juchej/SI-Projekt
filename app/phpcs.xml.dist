<?xml version="1.0"?>
<ruleset name="Project ruleset">
    <description>Ruleset based on PSR1, PSR2, and PSR12</description>

    <rule ref="PSR1" />
    <rule ref="PSR2" />
    <rule ref="PSR12" />

    <exclude-pattern>src/Kernel.php</exclude-pattern>

    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>

    <fileExtensions>php</fileExtensions>
</ruleset>
